<li class="commentForm" data-comment-id=<%=comment.id%>>
  <p><%= comment.user.login%></p>
<span>Submitted <%= time_ago_in_words(comment.created_at) %> ago</span>
  <div class="textComment"><%= comment.body %></div>
  
<% if current_user %>

<div data-object-id="<%= comment.id %>" data-object-type="Comment">
<%= render 'likes/likes', object: comment%>
</div>

  <%= form_with( model: Comment.new(commentable_type: "Comment"),    class:"commentForComment")  do |f| %>
  
  <% if current_user && current_user.id == comment.user_id%>

  <%= image_tag(comment.image.thumb.url, alt: 'Image') if comment.image?%>

      <span class="deleteAction"> Delete</span>
      <% end %>
      <span class="showCommentForm"> Reply</span>
     <%= f.hidden_field :commentable_id , :value => comment.id%>
     <%= f.hidden_field :commentable_type, :value => comment.class.to_s%>
     <div class="show_comment_form"><%= f.text_area :body, class: "clearInput", :placeholder => "Add a Reply" %><br/>
      <%= f.submit "Reply"  %> 
      

      <div class="field">
       <%= f.button("Select Image", {type: "button", onclick: "document.getElementById('getFile').click()", id: "selectImage"}) %>
    <%= f.file_field(:document, { id: "getFile", style: "display:none"}) %>

  </div>
</div>
      <% end %>

<% end %>

  <ul class="commentList" data-comment-id=<%=comment.id%>>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
