<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <div class="alert alert-danger">
        <h5><%= t('common.errors')%></h5>
        <ul>
        <% @post.errors.full_messages.each do |msg|%>
        <li><%= msg%></li>
        </ul>
        </div>
    <% end %>
    <% end %>
    <p>
    Name<br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
    </p>

     <p>
    Text<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>

   <p>
    Image<br>
   
  </p>

      <p>
    <button class="go">Go</button>
    </p>


   
<%= form_for(@post, :html => { multipart: true }) do |f| %>

  <%= f.fields_for :documents do |ff| %>
    <div class="field">
      <%= ff.label :document %><br>
      <%= ff.file_field :document, multiple: true, name: "documents[]" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
    <% end %>